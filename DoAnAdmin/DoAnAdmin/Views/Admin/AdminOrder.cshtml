@model IEnumerable<DoAnAdmin.Models.Order>
@using DoAnAdmin.Models

@{
    ViewBag.Title = "AdminOrder";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";

}
<style>
    .AdOrcer_btn {
        background-color: white;
        border-radius: 10px !important;
    }

        .AdOrcer_btn:hover {
            background-color: #EEF1FF;
            border: 2px solid black;
        }
</style>
<div class="card container-fluid" style="border-radius:10px">
    <div class="card-header bg-gradient-light">
        <center class="">
            <h3 class="display-5 mb-2 text-center">Danh sách đơn hàng</h3>
            <p class="mb-5 text-center">
                <i class="text-info font-weight-bold">Có @Model.ToList().Count</i> item trong đơn hàng
            </p>
        </center>
    </div>
    <div class="card-body">
        <table id="shoppingCart" class="table table-bordered table-hover mt-2" style="font-size: 12px; color: black; border-radius: 20px; text-align:center">
            <thead class="thead-dark">
                <tr>
                    <th style="width:30%">Ngày đặt hàng</th>
                    <th style="width:22%">Trạng thái</th>
                    <th style="width:20%">Người đặt</th>
                    <th style="width:26%"></th>
                    <th style="width:26%"></th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
        <tbody style="border:0">
            @if (@item.orderStatus.Equals("Đã hủy"))
            {
                <tr style="font-size: 15px; background-color: #FF597B;">
                    <td data-th="">
                        @item.orderDate
                    </td>
                    <td data-th="">
                        <span class="">@item.orderStatus</span>
                    </td>
                    <td data-th="">
                        @Html.DisplayFor(modelItem => item.Customer.cusName)
                    </td>
                    <td data-th="">
                        <a class="btn AdOrcer_btn" href="@Url.Action("AdminDetailsOrder","Admin", new { id=item.orderID })" style="text-decoration:none;color:black">Chi tiết</a>
                    </td>
                    <td>
                        <a class="btn AdOrcer_btn" href="@Url.Action("AdminUpdateStatusOrder","Admin", new { id=item.orderID,tt=item.orderStatus })" style="text-decoration:none;color:black">Cập nhật</a>
                    </td>
                </tr>
            }
            else if (@item.orderStatus.Equals("Giao hàng thành công"))
            {
                <tr style="font-size: 15px; background-color: #4cff00;">
                    <td data-th="">
                        @item.orderDate
                    </td>
                    <td data-th="">
                        <span class="">@item.orderStatus</span>
                    </td>
                    <td data-th="">
                        @Html.DisplayFor(modelItem => item.Customer.cusName)
                    </td>
                    <td data-th="">
                        <a class="btn AdOrcer_btn" href="@Url.Action("AdminDetailsOrder","Admin", new { id=item.orderID })" style="text-decoration:none;color:black">Chi tiết</a>
                    </td>
                    <td>
                        <a class="btn AdOrcer_btn" href="@Url.Action("AdminUpdateStatusOrder","Admin", new { id=item.orderID,tt=item.orderStatus })" style="text-decoration:none;color:black">Cập nhật</a>
                    </td>
                </tr>
            }
            else if (@item.orderStatus.Equals("Đang giao hàng"))
            {
                <tr style="font-size: 15px;">
                    <td data-th="">
                        @item.orderDate
                    </td>
                    <td data-th="">
                        <span class="">@item.orderStatus</span>
                    </td>
                    <td data-th="">
                        @Html.DisplayFor(modelItem => item.Customer.cusName)
                    </td>
                    <td data-th="">
                        <a class="btn AdOrcer_btn" href="@Url.Action("AdminDetailsOrder","Admin", new { id=item.orderID })" style="text-decoration:none;color:black">Chi tiết</a>
                    </td>
                    <td>
                        <a class="btn AdOrcer_btn" href="@Url.Action("AdminUpdateStatusOrder","Admin", new { id=item.orderID,tt=item.orderStatus })" style="text-decoration:none;color:black">Cập nhật</a>
                    </td>
                </tr>

            }
            else if (@item.orderStatus.Equals("Đã giao hàng"))
            {
                <tr style="font-size: 15px; background-color: #ADE792;">
                    <td data-th="">
                        @item.orderDate
                    </td>
                    <td data-th="">
                        <span class="">@item.orderStatus</span>
                    </td>
                    <td data-th="">
                        @Html.DisplayFor(modelItem => item.Customer.cusName)
                    </td>
                    <td data-th="">
                        <a class="btn AdOrcer_btn" href="@Url.Action("AdminDetailsOrder","Admin", new { id=item.orderID })" style="text-decoration:none;color:black">Chi tiết</a>
                    </td>
                    <td>
                        <a class="btn AdOrcer_btn" href="@Url.Action("AdminUpdateStatusOrder","Admin", new { id=item.orderID,tt=item.orderStatus })" style="text-decoration:none;color:black">Cập nhật</a>
                    </td>
                </tr>
            }
            else if (@item.orderStatus.Equals("Đang chờ xác nhận"))
            {
                <tr style="font-size: 15px; background-color: #86E5FF;">
                    <td data-th="">
                        @item.orderDate
                    </td>
                    <td data-th="">
                        <span class="">@item.orderStatus</span>
                    </td>
                    <td data-th="">
                        @Html.DisplayFor(modelItem => item.Customer.cusName)
                    </td>
                    <td data-th="">
                        <a class="btn AdOrcer_btn" href="@Url.Action("AdminDetailsOrder","Admin", new { id=item.orderID })" style="text-decoration:none;color:black">Chi tiết</a>
                    </td>
                    <td>
                        <a class="btn AdOrcer_btn" href="@Url.Action("AdminUpdateStatusOrder","Admin", new { id=item.orderID,tt=item.orderStatus })" style="text-decoration:none;color:black">Cập nhật</a>
                    </td>
                </tr>

            }
            else if (@item.orderStatus.Equals("Trả hàng"))
            {
                <tr style="font-size: 15px; background-color: #ffd800;">
                    <td data-th="">
                        @item.orderDate
                    </td>
                    <td data-th="">
                        <span class="">@item.orderStatus</span>
                    </td>
                    <td data-th="">
                        @Html.DisplayFor(modelItem => item.Customer.cusName)
                    </td>
                    <td data-th="">
                        <a class="btn AdOrcer_btn" href="@Url.Action("detailReturnProduct","Admin", new { id=item.orderID })" style="text-decoration:none;color:black">Xem đơn hàng</a>
                    </td>
                    <td>
                        @*<a class="btn AdOrcer_btn" href="@Url.Action("deleteReturnProduct","Admin", new { id=item.orderID,tt=item.orderStatus })" style="text-decoration:none;color:black">Cập nhật</a>*@
                    </td>
                </tr>

            }
        </tbody>
            }
        </table>
    </div>
</div>
<br />




