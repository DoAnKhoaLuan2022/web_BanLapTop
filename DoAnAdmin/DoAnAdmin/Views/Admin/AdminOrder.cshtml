@model IEnumerable<DoAnAdmin.Models.Order>

@{
    ViewBag.Title = "AdminOrder";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<div class="card container-fluid" style="border-radius:10px">
    <div class="card-header bg-gradient-light">
        <center class="">
            <h3 class="display-5 mb-2 text-center">Danh sách đơn hàng</h3>
            <p class="mb-5 text-center">
                <i class="text-info font-weight-bold">Có @Model.ToList().Count</i> item trong đơn hàng
            </p>
        </center>
    </div>
    <div class="card-body">
        <table id="shoppingCart" class="table table-bordered table-hover mt-2" style="font-size: 12px; color: black; border-radius: 20px; text-align:center">
            <thead class="thead-dark">
                <tr>
                    <th style="width:30%">Ngày đặt hàng</th>
                    <th style="width:22%">Trạng thái</th>
                    <th style="width:20%">Người đặt</th>
                    <th style="width:26%"></th>
                    <th style="width:26%"></th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td data-th="">
                        @item.orderDate
                    </td>

                    <td data-th="">
                        @item.orderStatus
                    </td>
                    <td data-th="">
                        @Html.DisplayFor(modelItem => item.Customer.cusName)
                    </td>
                    <td data-th="">
                        <a class="btn btn-secondary btn-sm text-light mr-1" href="@Url.Action("AdminDetailsOrder","Admin", new { id = item.orderID })" style="text-decoration:none;color:black">Chi tiết đơn hàng</a>
                    </td>
                    <td>
                        <a class="btn btn-secondary btn-sm text-light mr-1" href="@Url.Action("AdminUpdateStatusOrder","Admin", new { id = item.orderID })" style="text-decoration:none;color:black">Cập nhật đơn hàng</a>
                    </td>
                </tr>}
        </table>
    </div>
</div>
<br />




