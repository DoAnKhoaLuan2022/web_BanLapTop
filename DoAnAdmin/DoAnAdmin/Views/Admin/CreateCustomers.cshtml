@model DoAnAdmin.Models.Customer

@{
    ViewBag.Title = "CreateCustomers";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2>Thêm mới khách hàng</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Customer</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Tên khách hàng
            <div class="col-md-10">
                @Html.EditorFor(model => model.cusName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cusName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Email
            <div class="col-md-10">
                @Html.EditorFor(model => model.cusEmail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cusEmail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Số điện thoại
            <div class="col-md-10">
                @Html.EditorFor(model => model.cusPhone, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cusPhone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Mật khẩu
            <div class="col-md-10">
                @Html.EditorFor(model => model.cusPassword, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                @Html.ValidationMessageFor(model => model.cusPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Địa chỉ khách hàng
            <div class="col-md-10">
                @Html.EditorFor(model => model.cusAddress, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cusAddress, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Loại khách hàng
            <div class="col-md-10">
                @Html.DropDownList("cusType", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.cusType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Trạng thái tài khoản
            <div class="col-md-10">
                @Html.EditorFor(model => model.cusStatus, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cusStatus, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Hình ảnh
            <div class="col-md-10">
                @Html.EditorFor(model => model.cusPhoto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cusPhoto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "pageAdmin")
</div>
