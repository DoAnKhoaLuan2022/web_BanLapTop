@using DoAnAdmin.Models
@using PagedList.Mvc
@model PagedList.IPagedList<Comment>
@{
    int i = 0;
    var us = Session["user"] as DoAnAdmin.Models.Customer;
    if (us == null)
    {
        i = 1;
    }
    else
    {
        i = 0;
    }
    var cm = Session["cm"] as DoAnAdmin.Models.Comment;
    Comment CM = Model.ToList().FirstOrDefault();
    string idPro = "";
    if (CM != null)
    {
        idPro = CM.proID;
    }
}
<div onclick="clickMe(@i)">
    @using (Html.BeginForm())
    {
        <h1>@ViewBag.baoloi</h1>
        <div class="w-100">
            <div>
                <h1>Comments</h1>
                @foreach (var item in Model)
                {
                    <div class="comment mt-4 text-justify">
                        <img src="~/Assets/Image/ImageAvatar/messages-3.jpg" alt=""
                             class="rounded-circle" width="40" height="40">
                        <h4>@item.cusName</h4> <span>@item.comDate</span> <br>
                        <p>@item.comMessage</p>
                    </div>
                }
                @if (cm != null)
                {
                    <div class="comment mt-4 text-justify">
                        <img src="~/Assets/Image/ImageAvatar/messages-3.jpg" alt=""
                             class="rounded-circle" width="40" height="40">
                        <h4>@cm.cusName</h4> <span>@cm.comDate</span> <br>
                        <p>@cm.comMessage</p>
                    </div>
                }

            </div>
            <div>
                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea name="msg" id="msg" cols="30" rows="5" class="form-control"
                              style="background-color: white;"></textarea>
                </div>
                <div class="form-group" style="text-align:center">

                    <button id="btn_update1" type="submit" class="button_52">Comment</button>
                </div>
            </div>
        </div>
        <div class="pagination" style="margin-left: 390px">
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
            of @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("Index", new { @id = idPro, page }))
        </div>
    }
</div>
<script>
    function clickMe(i) {
        if (i == 1) {
            window.location = "../Customers/Login";
        }
    }
</script>

<style>
    .ul.pagination {
        display: inline-block;
        padding: 0;
        margin: 0;
    }

    ul.pagination li {
        display: inline;
    }

        ul.pagination li a {
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
            transition: background-color .3s;
        }

            ul.pagination li a.active {
                background-color: #4CAF50;
                color: white;
            }

            ul.pagination li a:hover:not(.active) {
                background-color: #ddd;
            }
</style>
<style>
    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            font-size: 15px;
            color: #808080;
        }

        .form-group input, .form-group textarea {
            border-color: black;
        }
</style>