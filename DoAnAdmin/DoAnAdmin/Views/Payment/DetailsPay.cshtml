@using DoAnAdmin.Models
@model List<DetailsOrder>
@{
    ViewBag.Title = "DetailsCar1t";
    Layout = "~/Views/Shared/_DetailLayoutPage.cshtml";
    QL_LaptopEntities mydb;
}

<section class="pt-5 pb-5">
    <div class="container">
        <div class="row w-100">
            <div class="col-lg-12 col-md-12 col-12">
                <h3 class="display-5 mb-2 text-center">Lịch sử mua hàng</h3>
                <table id="shoppingCart" class="table table-condensed table-responsive">
                    <thead>
                        <tr >
                            <th style="width:40%">Hình sản phẩm</th>
                            <th style="width:10%">Giá thành</th>
                            <th style="width:10%">Số lượng</th>
                            <th style="width:20%">Địa chỉ</th>
                            @*<th style="width:10%">Số điện thoại</th>*@
                            <th style="width:10%">Đơn hàng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            mydb = new QL_LaptopEntities();
                            var cus = mydb.Customers.Where(n => n.cusID == item.cusID).FirstOrDefault();
                            var cusAdr = mydb.CustomerAddresses.Where(n => n.cusID == cus.cusID).FirstOrDefault();
                            var pro = mydb.Products.Where(n => n.id == item.proID).FirstOrDefault();
                            var orr = mydb.Orders.Where(n => n.cusID == cus.cusID).FirstOrDefault();
                            using (Html.BeginForm("Update", "Cart"))
                            {
                        <tr class="text-left">
                            <td data-th="Product">
                                <div class="row">
                                    <input type="number" name="id" value="@pro.id" hidden="hidden" />
                                    <div class="col-md-3 text-left">
                                        <img src="~/Assets/Image/ImageProduct/@pro.avatar" alt="" class="img-fluid d-none d-md-block rounded mb-2 shadow ">
                                    </div>
                                    <div class="col-md-9 text-left mt-sm-2">
                                        @pro.Name
                                        <p class="font-weight-light">Brand &amp; Name</p>
                                    </div>
                                </div>
                            </td>
                            <td data-th="Price">@pro.price</td>
                            <td data-th="Quantity">
                                <input type="number" min="1" name="quantity" id="txt_quantity" class="form-control form-control-lg text-center" value="@item.orderQuantity">
                            </td>
                            <td class="actions" data-th="">
                                <div class="text-right">
                                    @cusAdr.Name_Address
                                </div>
                            </td>
                            @*<td class="actions" data-th="">
                                <div class="text-right">
                                    <h5>@item.Customer.cusPhone</h5>
                                </div>
                            </td>*@
                            <td class="actions" data-th="">
                                <div class="text-right">
                                    @orr.orderStatus
                                </div>
                            </td>
                        </tr>
                            }
                        }
                    </tbody>
                </table>
                <div class="float-right text-right">
                    Tổng thành tiền:
                    <h1 style="color:red">@String.Format("{0:0,0}", @Model.Sum(n => n.orderMoney)) VND</h1>
                </div>
            </div>
        </div>
        <div class="row mt-4 d-flex align-items-center">

            <div class="col-sm-6 mb-3 mb-m-1 order-md-1 text-md-left">
                <a href="@Url.Action("ShowAllProducts","Product")">
                    <i class="fas fa-arrow-left mr-2"></i> Continue Shopping
                </a>
            </div>
        </div>
    </div>
</section>



<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />