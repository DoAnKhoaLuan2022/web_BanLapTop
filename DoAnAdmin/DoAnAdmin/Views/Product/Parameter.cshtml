@model PagedList.IPagedList<DoAnAdmin.Models.parameter>
@using PagedList.Mvc;
@using PagedList;
@{ ViewBag.Title = "SanPham";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml"; }

@{ var success = ViewBag.success;
    var failed = ViewBag.failed; }

<br />
@if (@ViewBag.failed != null)
{
<div class="card bg-danger">
    <span class="text-light">&nbsp;&nbsp;<i class="far fa-times-circle"></i>&nbsp;@ViewBag.failed</span>
</div>}
@if (@ViewBag.success != null)
{
<div class="card bg-success">
    <span class="text-light">&nbsp;&nbsp;<i class="fas fa-check"></i>&nbsp;@ViewBag.success</span>
</div>}
<div class="card container-fluid" style="border-radius:10px">
    <div class="card-header bg-gradient-light">
        <center class=""><h5 style="text-transform:uppercase;font-weight:bold">Mô tả SẢN PHẨM</h5></center>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
<div class="row container mt-2">
    <div class="col-4">
        <input type="text" class="form-control" placeholder="Search" name="txtSearch" />
    </div>
    <div class="col-1">
        <input type="submit" class="btn btn-primary" value="&#xf002" />
    </div>

</div>}
        <div class="row">
            <div class="col-4" style="margin: 20px 0 20px">
                <a href="@Url.Action("InsertParameter", "Product")"><input type="button" class="btn btn-primary btn-link" value="Thêm thuộc tính phụ kiện" style="font-size:13px; color:white ; text-decoration:none" /></a>
            </div>
        </div>
        <table class="table table-bordered table-hover mt-2" style="font-size: 12px; color: black; border-radius: 20px">
            <thead class="thead-dark">
                <tr>
                    <th>Mã#</th>
                    <th>Tên Thuộc tính</th>
                    <th>Nhóm</th>
                    <th></th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
<tr style="text-align:justify">
    <td>
        @Html.DisplayFor(modelItem => item.paraID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.paraName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TitleDetailAccessory.ttName)
    </td>
    <td>
        <a class="btn btn-secondary btn-sm text-light" href="@Url.Action("DeleteParameter", "Product", new { @id = item.paraID })" style="text-decoration:none;color:black">Xóa</a>&nbsp;&nbsp;
    </td>
</tr>}

        </table>
        <div class="row">
            <div class="col-5">
                @Html.PagedListPager(Model, Page => Url.Action("Parameter", new { Page }))
            </div>
        </div>
    </div>
</div>
<br />





