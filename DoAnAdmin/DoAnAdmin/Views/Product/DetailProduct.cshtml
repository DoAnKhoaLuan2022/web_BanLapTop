<style>
    .rating {
        height: 50px;
        display: block;
        overflow: hidden;
        unicode-bidi: bidi-override;
        direction: rtl;
    }

        .rating:not(:checked) > input {
            display: none;
        }

    /* - - - - - RATE */
    #rate:not(:checked) > label {
        cursor: pointer;
        float: right;
        /* width: 50px; */
        /* height: 50px; */
        display: block;
        color: #FFE15D;
        line-height: 33px;
        text-align: center;
        font-size: 30px;
        padding-right: 5px;
    }

        #rate:not(:checked) > label:hover,
        #rate:not(:checked) > label:hover ~ label {
            color: #F49D1A;
        }

    #rate > input:checked + label:hover,
    #rate > input:checked + label:hover ~ label,
    #rate > input:checked ~ label:hover,
    #rate > input:checked ~ label:hover ~ label,
    #rate > label:hover ~ input:checked ~ label {
        color: #F49D1A;
    }

    #rate > input:checked ~ label {
        color: #F49D1A;
    }

    .rate_num {
        font-size: 25px;
        color: #fe8c23;
        font-weight: 600;
        padding: 0 20px 0 65px;
    }
</style>
<style>
    .rating-list li {
