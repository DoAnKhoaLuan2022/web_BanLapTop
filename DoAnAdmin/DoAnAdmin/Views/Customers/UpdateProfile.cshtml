<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css" />


<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<div class="container">
    @{
        var info = Session["user"] as DoAnAdmin.Models.Customer;
        QL_LaptopEntities db = new QL_LaptopEntities();
        var cus = db.Customers.Where(n => n.cusID == info.cusID).ToList().FirstOrDefault();
        string avatar = cus.cusPhoto;
        string gt = cus.cusGender;
        if (gt == null)
        {
            gt = "Nam";
        }
        if (avatar == null)
        {
            avatar = "messages-1.jpg";
        }
    }
    <div class="main-body">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="main-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("ShowAllProducts","Product")">Home</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Profile","Customers")">User Profile</a></li>
                <li class="breadcrumb-item active" aria-current="page">Update profile</li>
            </ol>
        </nav>
        <!-- /Breadcrumb -->

        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">

                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="~/Assets/Image/ImageAvatar/@avatar" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4>@info.cusName</h4>
                                <p class="text-secondary mb-1">Full Stack Developer</p>
                                <p class="text-muted font-size-sm">@info.cusAddress</p>
                                <button class="btn btn-primary">Update avatar</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-3">
